{
    "name": "Homegate - co≈õ tam!",
    "url": "http://www.homegate.ch/",
    "storage": "xml",
    "layout": {
        "root": {
            "name": "buy",
            "selector": "li.page-nav-item--buy a",
            "actions": "sections"
        },
        "actions": [
            {
                "name": "sections",
                "selector": "div.ad-aside-content div.box a",
                "actions": "countries"
            },
            {
                "name": "countries",
                "selector": "area[href]",
                "actions": "cantons"
            },
            {
                "name": "cantons",
                "selector": "area[href]",
                "actions": "documents, nextList"
            },
            {
                "name": "nextList",
                "selector": "a[rel=next]",
                "actions": "documents, nextList",
                "schema": "partial"
            },
            {
                "name": "documents",
                "selector": "a[class='detail-page-link box-row--link']",
                "schema": "details"
            }
        ]
    },
    "schemes": [
        {
            "name": "details",
            "identifier": {
                "selector": "div.nr span",
                "action": "text",
                "filters": "trim, num",
                "validators": "notEmpty, isNum"
            },
            "structure": {
                "name": {
                    "selector": "h1.title",
                    "action": "text",
                    "filters": "lower, trim, title"
                },
                "features": {
                    "selector": "div.detail-key-data",
                    "action": "list"
                }
            }
        },
        {
            "name": "partial",
            "identifier": {
                "selector": "div.nr span",
                "action": "text",
                "filters": "trim, num",
                "validators": "notEmpty, isNum"
            },
            "structure": {
            }
        }
    ]
}
