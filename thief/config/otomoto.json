{
    "name": "AUDI-A4",
    "url": "http://otomoto.pl/osobowe/audi/a4",
    "root": "next-page-of-cars",
    "nodes": {
        "next-page-of-cars": {
            "selector": "[class='next abs'] a",
            "neighbors": [
                "car",
                "next-page-of-cars"
            ]
        },
        "car": {
            "selector": "a[class*='img-cover']"
        }
    },
    "schema": {
        "storage": "json",
        "fields": {
            "id": {
                "selector": "div.favorite-box a |attr:data-id",
                "filters": "trim"
            },
            "title": {
                "selector": "meta[property='og:title'] |attr:content",
                "filters": "trim, rspaces, upper"
            },
            "photos": {
                "selector": "div.photo-item img|attr:src:true"
            },
            "brand": {
                "selector": "li.offer-params__item |after:Marka",
                "filters": "trim"
            },
            "vin": {
                "selector": "li.offer-params__item |after:VIN"
            },
            "mileage": {
                "selector": "li.offer-params__item |after:Przebieg",
                "filters": "num, trim"
            },
            "model": {
                "selector": "li.offer-params__item |after:Model"
            },
            "engine": {
                "selector": "li.offer-params__item |after:PojemnośćSkokowa |after:RodzajPaliwa"
            },
            "year": {
                "selector": "li.offer-params__item |after:RokProdukcji"
            },
            "price": {
                "selector": "span.offer-price__number |text",
                "filters": "num, trim"
            },
            "currency": {
                "selector": "span.offer-price__number |text",
                "filters": "upper, alpha, trim"
            },
            "url": {
                "selector": "meta[property='og:url'] |attr:content",
                "filters": ""
            },
            "location": {
                "selector": "div.seller-box__seller-address |text",
                "filters": "rspaces"
            },
            "description": {
                "selector": "div.offer-description |text",
                "filters": "rspaces"
            },
            "equipment": {
                "selector": "li.offer-features__item |text:each"
            },
            "features": {
                "selector": "li.offer-params__item |map"
            }
        }
    }
}
